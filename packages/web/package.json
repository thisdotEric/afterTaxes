{
  "name": "@aftertaxes/web",
  "description": "Web App for afterTaxes application",
  "version": "1.0.0",
  "author": "John Eric Siguenza",
  "scripts": {
    "start": "cp -v .env.prod .env && snowpack dev",
    "start:dev": "cp -v .env.dev .env && snowpack dev",
    "build": "SNOWPACK_PUBLIC_AFTERTAXES_SERVER=https://aftertaxes.herokuapp.com/api/v1/ snowpack build && cp public/_redirects build/_redirects",
    "build:dev": "cp -v .env.dev .env && snowpack build && cp public/_redirects build/_redirects",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@aftertaxes/commons": "1.0.0",
    "@mantine/core": "^4.2.1",
    "@mantine/dates": "^4.2.2",
    "@mantine/hooks": "^4.2.1",
    "@mantine/modals": "^4.2.7",
    "@mantine/notifications": "^4.2.2",
    "@types/react-datepicker": "^4.4.2",
    "axios": "^0.27.2",
    "chart.js": "^3.8.0",
    "dayjs": "^1.11.1",
    "framer-motion": "^6.3.11",
    "react": "^17.0.2",
    "react-chartjs-2": "^4.2.0",
    "react-datepicker": "^4.8.0",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-router-dom": "^6.2.1",
    "react-table": "^7.7.0",
    "styled-components": "^5.3.3",
    "tabler-icons-react": "^1.47.0"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.2.0",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/web-test-runner-plugin": "^0.2.2",
    "@testing-library/react": "^11.2.6",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-table": "^7.7.11",
    "@types/snowpack-env": "^2.3.3",
    "@types/styled-components": "^5.1.21",
    "@web/test-runner": "^0.13.3",
    "prettier": "^2.2.1",
    "snowpack": "^3.3.7",
    "typescript": "^4.2.4"
  }
}
