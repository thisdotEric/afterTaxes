{
  "name": "@aftertaxes/server",
  "version": "1.0.0",
  "description": "REST API backend for a personalized income tracker application",
  "author": "John Eric Siguenza <siguenzajohneric@gmail.com>",
  "license": "MIT",
  "main": "dist/server.js",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "scripts": {
    "dev2": "fastify start ./src/server.ts",
    "dev": "cross-env NODE_ENV=development tsnd -r tsconfig-paths/register --respawn --transpile-only ./src/server.ts",
    "pretty": "npx prettier --write .",
    "knex": "npx knex --knexfile src/database/knex/knexfile.ts",
    "build": "cross-env NODE_ENV=production yarn build-ts",
    "start": "node -r ./prod-paths.js ./dist/server.js",
    "knex-prod": "knex --knexfile dist/database/knex/knexfile.js",
    "prod-migrations": "yarn prod-rollback-all && yarn knex-prod migrate:latest && yarn knex-prod seed:run",
    "build-ts": "tsc -p .",
    "test": "jest --coverage --detectOpenHandles --forceExit"
  },
  "keywords": [
    "graphql",
    "typescript",
    "nodejs",
    "fastify"
  ],
  "dependencies": {
    "@aftertaxes/commons": "1.0.0",
    "@mgcrea/fastify-session": "^0.15.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "fastify": "^3.27.4",
    "fastify-autoload": "^3.11.0",
    "fastify-cookie": "^5.5.0",
    "fastify-cors": "^6.0.2",
    "fastify-decorators": "^3.11.0",
    "fastify-session-knex-store": "^0.1.4",
    "fastify-zod": "^1.0.0-rc10",
    "knex": "^0.95.13",
    "pg": "^8.7.1",
    "redis": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.4",
    "uuid": "^8.3.2",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.6",
    "@types/pg": "^8.6.1",
    "@types/uuid": "^8.3.1",
    "jest": "^27.4.5",
    "prettier": "^2.4.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  }
}
